        </div>

    </section>

    <div id="chat-bar" class="avenue-messenger-widget-mb d-flex justify-content-center align-items-center" style="display: none;">

        <i class="fa fa-2x fa-comment-o"></i>
    </div>
    <script src="~/lib/toasty.js/dist/toasty.min.js"></script>
</body>
