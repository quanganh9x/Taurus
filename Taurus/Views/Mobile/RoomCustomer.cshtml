                    } else if (message.type == "start") {
                    } else if (message.type == "done") {
                        var result = message.data[0];
                        var blob = new File([result.data], 'test.mp4', {
                            type: 'video/mp4'
                        });
                        PostBlob(blob);
                    }
                };
                var postMessage = function () {
                    posted = true;
                    worker.postMessage({
                        type: 'command',
                        arguments: '-i video.webm -c:v mpeg4 -b:v 6400k -strict experimental output.mp4'.split(' '),
                        files: [
                            {
                                data: new Uint8Array(aab),
                                name: 'video.webm'
                            }
                        ]
                    });
                };
            }
            function PostBlob(blob) {
                var form = new FormData();
                form.append("blob", blob); // fuck is a blob
                window.blobs.shift();
                $.ajax({
                    url: '@Url.Action("Moderation","Video")',
                    data: form,
                    processData: false,
                    contentType: false,
                    type: 'POST',
                    success: function (data) {
                        $.get('https://api.sightengine.com/1.0/video/check-sync.json?models=nudity,wad,scam&stream_url=' + data.data + '&api_user=442186726&api_secret=FHzmjQiCUg2iQB9rUtQk')
                            .done(function (res) {
                                console.log(res);
                                res = res.data.frames;
                                var a = 0, b = 0, c = 0;
                                for (var i = 0; i < res.length; i++) {
                                    a += res.nudity.raw;
