    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="~/css/swiper.min.css">

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/notification.css">
</head>
<body>
    

    <header class="site-header">
        <div class="nav-bar">
            <div class="container">
                <div class="row">
                    <div class="col-12 d-flex flex-wrap justify-content-between align-items-center">
                        <div class="site-branding d-flex align-items-center">
                            <a class="d-block" href="/" rel="home"><img class="d-block" src="/images/logo.png" alt="logo"></a>
                        </div><!-- .site-branding -->

                        <nav class="site-navigation d-flex justify-content-end align-items-center">
                            <ul class="d-flex flex-column flex-lg-row justify-content-lg-end align-items-center">
                                <li class="current-menu-item"><a href="/">Home</a></li>
                                <li><a href="/Panel">Panel</a></li>
                                <li><a href="/Question">Question</a></li>

                                <div class="dropdown show">
                                    <li class="dropdown-toggle" href="#" role="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-bell"></i>
                                    </li>

                                    <div class="dropdown-menu notification-dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <h6 style="color:black" class="dropdown-header">Notifications</h6>
                                        
                                        <div id="notificationsContainer" class="notifications-container">
                                            <a class="dropdown-item dropdown-notification" style="color: black" href="#">
                                                <div class="notification-read">
                                                    <i class="fa fa-times" aria-hidden="true"></i>
                                                </div>
                                                <img class="notification-img" src="https://placehold.it/48x48" alt="Icone Notification" />
                                                <div class="notifications-body">
                                                    <p class="notification-texte">"Lorem ipsum dolor sit amet, consectetur adipiscing </p>
                                                    <p class="notification-date text-muted">
                                                        <i class="fa fa-clock-o" aria-hidden="true"></i> Monday, 10 May, 8h00
                                                    </p>
                                                </div>
                                            </a>

                                            <a class="dropdown-item dropdown-notification notification-unread" style="color: black" href="#">
                                                <div class="notification-read">
                                                    <i class="fa fa-times" aria-hidden="true"></i>
                                                </div>
                                                <img class="notification-img" src="https://placehold.it/48x48" alt="Icone Notification" />
                                                <div class="notifications-body">
                                                    <p class="notification-texte">"Lorem ipsum dolor sit amet, consectetur adipiscing </p>
                                                    <p class="notification-date text-muted">
                                                        <i class="fa fa-clock-o" aria-hidden="true"></i> Monday, 10 May, 8h00
                                                    </p>
                                                </div>
                                            </a>
                                        </div>
                                        <a class="dropdown-item dropdown-notification-all" style="color: white;" href="#">
                                            View all notifications
                                        </a>                                        

                                    </div>
                                </div>
                                 
                                <div class="dropdown show">
                                    <li class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-bookmark"></i> <span id="bookmark-count"></span>
                                    </li>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" id="bookmark">

                                        @* Nhét các NOTIFICATION vào đây *@
                                        
                                        @* Dừng ở đây *@

                                    </div>
                                </div>                                


                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li>
                                        <a href="/Profile">Profile</a>
                                    </li>
                                    <li>
                                        <a href="/Logout">Logout</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="d-flex justify-content-center" href="/Login">Login</a>

                                    </li>
                                }
                            </ul>
                        </nav><!-- .site-navigation -->

                        <div class="hamburger-menu d-lg-none">
                            <span></span>
                            <span></span>
                            <span></span>
                            <span></span>
                        </div><!-- .hamburger-menu -->
                    </div><!-- .col -->
                </div><!-- .row -->
            </div><!-- .container -->
        </div><!-- .nav-bar -->

    </header><!-- .site-header -->

    @RenderBody()

    <footer class="site-footer">
        <div class="footer-widgets">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="foot-about">
                            <h2><a href="#"><img src="/images/logo.png" alt=""></a></h2>

                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec malesuada lorem maximus mauris scelerisque, at rutrum nulla dictum. Ut ac ligula sapien.</p>

                            <p class="copyright">
