                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div><!-- .foot-about -->
                    </div><!-- .col -->

                    <div class="col-12 col-md-6 col-lg-4 mt-5 mt-md-0">
                        <div class="foot-contact">
                            <h2>Contact</h2>

                            <ul class="p-0 m-0">
                                <li><span>Addtress:</span>Mitlton Str. 26-27 London UK</li>
                                <li><span>Phone:</span>+53 345 7953 32453</li>
                                <li><span>Email:</span>yourmail@gmail.com</li>
                            </ul>
                        </div>
                    </div><!-- .col -->

                    <div class="col-12 col-md-6 col-lg-4 mt-5 mt-md-0">
                        <div class="foot-links">
                            <h2>Useful Links</h2>

                            <ul class="p-0 m-0">
                                <li><a href="/">Home</a></li>
                                <li><a href="/About">About us</a></li>
                                <li><a href="/Contact">Contact</a></li>
                                <li><a href="/News">News</a></li>
                                <li><a href="/Services">Services</a></li>
                            </ul>
                        </div><!-- .foot-links -->
                    </div><!-- .col -->
                </div><!-- .row -->
            </div><!-- .container -->
        </div><!-- .footer-widgets -->
    </footer><!-- .site-footer -->

    @if (User.Identity.Name != null)
    {
        <script>

            var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();
            connection.on("NotificationMessage", function (message) {                
                console.log(message);    
                $("#notificationsContainer").prepend(
                    `<a class="dropdown-item dropdown-notification" style="color: black" href="#">
                        <div class="notification-read">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </div>
                        <img class="notification-img" src="https://placehold.it/48x48" alt="Icone Notification" />
                        <div class="notifications-body">
                            <p class="notification-texte">"${message.description}</p>
                            <p class="notification-date text-muted">
                                <i class="fa fa-clock-o" aria-hidden="true"></i> Monday, 10 May, 8h00
                            </p>
                        </div>
                    </a>`
                )
            });
            connection.start()
            
            $(document).ready(function () {
                var ez = function () {
                    $.get('@Url.Action("GetPendingSession", "Session")')
                        .done(function (data) {
                            data = data.data;
                            data = JSON.parse(data);
                            $('#bookmark-count').text(`${data.length}`)
                            $('#bookmark').html('');
                            for (var i = 0; i < data.length; i++) {
                                $('#bookmark').prepend(
                                    `<div class="p-3">
                                        <a target="_blank" class="dropdown-item" href="${data[i].Url}">${data[i].Message}</a>
                                 </div>`
                                )
                            }
                        });
                }
                ez();
                setInterval(ez, 5000);
            });
        </script>
    }
</body>
</html>