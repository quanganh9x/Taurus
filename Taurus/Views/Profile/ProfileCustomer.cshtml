@{
    ViewData["Title"] = "Profile Customer";
}


@model Customer
<div class="the-profile">
    <div class="container">
        <div class="row">
            <div class="col-3" style="text-align:center">
                <div class="card" style="width: auto;">
                    <img src="@Model.User.Avatar" class="card-img-top" alt="avatar">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.User.FullName</h5>
                        <p class="card-text">@Model.User.Address</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@Model.User.Gender.ToString()</li>
                        <li class="list-group-item"><b>Upvotes:</b> @Model.Votes.Count</li>
                        <li class="list-group-item"><b>Downvotes:</b> @Model.Flags.Count</li>
                        <li class="list-group-item">
                            <b><i class="fa fa-money" aria-hidden="true" style="color:darkgreen"> : </i>@Model.User.Coins</b>
                            <button type="button" class="btn btn-sm btn-primary ml-4" data-toggle="modal" data-target="#exampleModal2">
                                Deposit
                            </button>
                        </li>
                    </ul>
                    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <article class="card">
                                    <div class="card-body p-5">
                                        <ul class="nav bg-light nav-pills rounded nav-fill mb-3" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="pill" href="#nav-tab-paypal">
                                                    <i class="fa fa-paypal" aria-hidden="true"></i>  Paypal
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="pill" href="#nav-tab-bank">
                                                    <i class="fa fa-university"></i>  Bank Transfer
                                                </a>
                                            </li>
                                        </ul> <!-- tab-content .// -->
                                            <div class="tab-content">
                                                <div class="tab-pane fade show active" id="nav-tab-paypal">
                                                    <p>Enter the amount to transfer.</p>
                                                    <p class="mt-1">
                                                        <input style="text" class="form-control" placeholder=" Enter number money" />
                                                    </p>
                                                    <p>
                                                        <button class="subscribe btn btn-primary btn-block mt-4" type="button"> Confirm  </button>
                                                        <strong>Conversion rate :</strong> 1.000 = 1 coin.
                                                    </p>
                                                </div>
                                                <div class="tab-pane fade" id="nav-tab-bank">
                                                    <p>Bank accaunt details</p>
                                                    <dl class="param">
                                                        <dt>Account Number: </dt>
                                                        <dd><input type="text" class="form-control" placeholder="Enter name Bank" /></dd>
                                                    </dl>
                                                    <dl class="param">
                                                        <dt>Message: </dt>
                                                        <dd><input style="text" class="form-control" placeholder=" Enter Accaunt number" /></dd>
                                                    </dl>
                                                    <dl class="param">
                                                        <dt>Amount: </dt>
                                                        <dd><input style="text" class="form-control" placeholder="Iban number" /></dd>
                                                    </dl>
                                                    <button class="subscribe btn btn-primary btn-block" type="button"> Confirm  </button>
                                                    
                                                </div> <!-- tab-pane.// -->
                                            </div>
                                    </div> <!-- card-body.// -->
                                </article>
                            </div>
                        </div>
                    </div>
                    @*<div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>*@
                </div>
                <button type="button" class="btn btn-primary mt-1" data-toggle="modal" data-target="#exampleModal">
                    Update Profile
                </button>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Update Profile</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/" method="post">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="fullname">Name</label>
                                        <input type="text" id="fullname" class="form-control" value="@Model.User.FullName"
                                               name="FullName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" id="email" class="form-control" value="@Model.User.Email"
                                               name="Email" />
                                    </div>
                                    <div class="form-group">
                                        <label for="gender">Gender</label>
                                        <select class="form-control" id="gender" name="Gender">
                                            <option value="1">Male</option>
                                            <option value="2">Female</option>
                                            <option value="0">@Model.User.Gender</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="dob">DOB</label>
                                        <input type="datetime-local" id="dob" class="form-control"
                                               name="DateOfBirth" value="@Model.User.DateOfBirth"/>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="phone">Phone</label>
                                        <input type="tel" id="phone" class="form-control" value="@Model.User.PhoneNumber"
                                               name="PhoneNumber" />
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input type="text" id="address" class="form-control" value="@Model.User.Address"
                                               name="Address" />
                                    </div>
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <select class="form-control" id="city" name="City">
                                            <option value="0">@Model.User.City</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="country">Country</label>
                                        <select class="form-control" id="country" name="Country">
                                            <option value="0">@Model.User.Country</option>
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Update Profile.</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-9">
                <div class="appointment-box the-profile-wrap p-3" id="accordion">
                    <h2 class="d-flex align-items-center">Stats!</h2>
                    @foreach (Session s in (List<Session>)ViewData["Sessions"])
                    {
                        <div class="card">
                            <div class="card-header" style="padding: 0;" id="heading_@s.Id">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapse_@s.Id" aria-expanded="true" aria-controls="collapse_@s.Id">
                                        @s.Id
                                    </button>
                                </h5>
                            </div>

                            <div id="collapse_@s.Id" class="collapse" aria-labelledby="heading_@s.Id" data-parent="#accordion">
                                <div class="card-body">
                                    <p><b>Name:</b> @s.Room.Doctor.User.FullName</p>
                                    @if (s.Status == Taurus.Models.Enums.SessionStatus.DONE)
                                    {
                                        <p><b>Charged:</b> @s.GetTotalPrice() Coins</p>

                                        @*<p><b>At:</b> @s.StartTime.Value.ToLocalTime()</p>*@
                                    }
                                    else
                                    {
                                        <p><b>ON HOLD</b></p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>