<script type="text/javascript">

    var revapi;
    var toast

    $(document).ready(function () {
        "use strict";
        revapi = $('.tp-banner').revolution(
            {
                delay: 15000,
                startwidth: 1200,
                startheight: 278,
                hideThumbs: 10,
                fullWidth: "on"
            });

        toast = new Toasty();
    });	//ready

    

    function voteDoctor(e, doctorId, questionId) {
        $.post("@Url.Action("DoctorVote", "Vote")", { doctorId: doctorId, questionId: questionId })
                .done(function (resp) {                                        
                    $(e).addClass("voted");
                    $(e).next().addClass("disabled");
                })
                .fail(function (resp) {
                    toast.error("You have already voted")                   
                });
    }

    function flagDoctor(e, doctorId, questionId) {        
        $.post("@Url.Action("DoctorFlag", "Vote")", { doctorId: doctorId, questionId: questionId })
                .done(function (resp) {                                        
                    $(e).addClass("flagged");
                    $(e).prev().addClass("disabled");
                })
                .fail(function (resp) {
                    toast.error("You have already voted")
                });
    }

</script>

