
<div class="homepage-boxes">
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                <div class="accordion" id="accordionExample">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Specialist
                                </button>
                            </h2>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                             data-parent="#accordionExample">

                            <ul class="list-group list-group-flush">
                                @foreach (Specialist s in (List<Specialist>) ViewData["Specialists"]) {
                                    <li class="list-group-item">@s.Name</li>                                   
                                }
                                
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                        data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Facilities
                                </button>
                            </h2>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo"
                             data-parent="#accordionExample">
                            <ul class="list-group list-group-flush">
                                @foreach (Facility f in (List<Facility>)ViewData["Facilities"])
                                {
                                    <li class="list-group-item">@f.Name</li>
                                }
                            </ul>
                        </div>
                    </div>                    
                </div>

            </div>
            <div id="list-room" class="col-9">

            </div>
        </div>
    </div>
 </div>

<script>
    $(document).ready(function () {
        $("#list-room").load('@Url.Action("GetListActiveRoom", "Panel")');
        setInterval(function () {
            $("#list-room").load('@Url.Action("GetListActiveRoom", "Panel")');
        }, 30000);
    })
</script>

